<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0BF"
    tools:context=".ToRating">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Liked your beverage, then save it again for later!"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:id="@+id/view5"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#4a3527" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:padding="10dp"
            android:text="If you'd like, you can save the settings you just used by giving this profile a name. Don't forget to rate your drink so you can quickly identify what you liked when browsing your profiles!"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txtDataRec"
            android:layout_width="325dp"
            android:layout_height="65dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:padding="10dp"
            android:text="Your rating will display here out of 5 stars"
            android:textColor="#000000"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:numStars="5"
            android:progressTint="#ddbf61"
            android:rating="3.5"
            android:secondaryProgressTint="#93781F" />

        <EditText
            android:id="@+id/txtProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_box"
            android:ems="10"
            android:gravity="center"
            android:hint="Name your profile"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="12sp" />

        <View
            android:id="@+id/view3"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#4a3527" />

        <Button
            android:id="@+id/btnGetStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rouned_ends_button"
            android:backgroundTint="#4A3527"
            android:text="Add Profile" />

        <Button
            android:id="@+id/btnToMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rouned_ends_button"
            android:backgroundTint="#4A3527"
            android:text="Back to Main Menu" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>