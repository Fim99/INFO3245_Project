<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0BF"
    tools:context=".ToLatteSelect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-16dp">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Select your ingredients for your Latte"
            android:textColor="#000000"
            android:textSize="20sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:background="#4a3527" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:padding="10dp"
            android:text="These stars will display once you load a profile that you have rated"
            android:textColor="#000000"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#ddbf61"
            android:rating="0"
            android:secondaryProgressTint="#93781F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDelProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#4a3527"
                android:drawableLeft="@drawable/trash"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#4a3527"
                android:drawableLeft="@drawable/refresh"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <Button
                android:id="@+id/btnRecProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#4a3527"
                android:drawableLeft="@drawable/load"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:textSize="8sp" />

            <Space
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spinnerProfile"
                android:layout_width="144dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Size:"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerSize"
                android:layout_width="175dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Milk Alternatives:"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerMilk"
                android:layout_width="175dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Sweeteners:"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerSweet"
                android:layout_width="175dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Flavoring:"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerFlav"
                android:layout_width="175dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="325dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:text="Number of Cups:"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtNumCup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/rounded_box"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:text="1"
                android:textColor="#000000"
                android:textColorHint="@color/white"
                android:textColorLink="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:id="@+id/view6"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="#4a3527" />

        <Button
            android:id="@+id/btnToIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rouned_ends_button"
            android:backgroundTint="#4a3527"
            android:text="Confirm Ingredients" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>