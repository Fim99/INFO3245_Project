<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0BF"
    tools:context=".ToLatteIng">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Ingredients For Your Latte"
            android:textColor="#000000"
            android:textSize="24sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:background="#4a3527" />

        <TextView
            android:id="@+id/txtIng"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_box"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:background="#4a3527" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_box"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtWater"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtCoffee"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtMilk"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtSweet"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtFlav"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="325dp"
            android:layout_height="3dp"
            android:background="#4a3527" />

        <Button
            android:id="@+id/btnToDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rouned_ends_button"
            android:backgroundTint="#4a3527"
            android:text="Directions" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>